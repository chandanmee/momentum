# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=1.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=momentum_dev
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_complex
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_make_it_different
JWT_REFRESH_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

# Session Configuration
SESSION_SECRET=your_session_secret_here_make_it_unique
SESSION_MAX_AGE=86400000

# Security Configuration
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ERROR=logs/error.log
LOG_FILE_COMBINED=logs/combined.log
LOG_FILE_HTTP=logs/http.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Geofencing Configuration
DEFAULT_GEOFENCE_RADIUS=100
MAX_GEOFENCE_RADIUS=1000
LOCATION_ACCURACY_THRESHOLD=50

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@momentum.com

# Redis Configuration (Optional - for session store)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# API Documentation
API_DOCS_URL=http://localhost:5000/api-docs

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Monitoring Configuration
MONITORING_ENABLED=false
MONITORING_ENDPOINT=http://localhost:9090

# Development Configuration
DEBUG_SQL=false
DEBUG_ROUTES=false
HOT_RELOAD=true

# Production Configuration
CLUSTER_MODE=false
CLUSTER_WORKERS=0
GRACEFUL_SHUTDOWN_TIMEOUT=30000

# SSL Configuration (Production)
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Cache Configuration
CACHE_ENABLED=false
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# Audit Configuration
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=365

# Notification Configuration
NOTIFICATION_ENABLED=false
NOTIFICATION_PROVIDER=email

# Time Zone Configuration
DEFAULT_TIMEZONE=UTC
ALLOW_TIMEZONE_OVERRIDE=true

# Report Configuration
REPORT_MAX_RECORDS=10000
REPORT_CACHE_TTL=300
REPORT_EXPORT_FORMATS=json,csv

# Mobile App Configuration
MOBILE_APP_VERSION=1.0.0
MOBILE_FORCE_UPDATE=false
MOBILE_MIN_VERSION=1.0.0