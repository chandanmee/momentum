# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=momentum_db
DB_USER=momentum_user
DB_PASSWORD=your_secure_password
DB_URL=postgresql://momentum_user:your_secure_password@localhost:5432/momentum_db

# Server Configuration
PORT=5000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# JWT Authentication
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_here
JWT_REFRESH_EXPIRES_IN=7d

# Mapbox Configuration
REACT_APP_MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@company.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@momentum-app.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_APP_NAME=Momentum
REACT_APP_VERSION=1.0.0

# Geofencing Configuration
DEFAULT_GEOFENCE_RADIUS=100
MAX_GEOFENCE_RADIUS=1000
MIN_GEOFENCE_RADIUS=10

# Session Configuration
SESSION_SECRET=your_session_secret_key_here
SESSION_MAX_AGE=86400000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Production Database (for deployment)
DATABASE_URL=postgresql://username:password@host:port/database

# AWS Configuration (for deployment)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=momentum-uploads

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=your_ga_tracking_id